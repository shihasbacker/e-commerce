	<script>


	  function changeQuantity(proId,index) {
    console.log('hihiiih');
  count= parseInt(document.getElementById(proId).value)
  
   $.ajax({
    url: '/incrementValue',
    data: {
      
      product: proId,           
      quantity: count,
      index:index

    },
     method: 'post',
    success: (response) => {
        console.log(response)
      
         
        document.getElementById(proId).value = response.quantity;
        log=proId+'price'
        console.log('hi')
        console.log(log);
        console.log(response)
        $('#'+proId+'price').text(response.price);

        $('#totalAmount').text(response.totalAmount);
      

    },
    error: (error) => {
        alert('hierror')
        console.log(error)
    },
  })
}
	

	function removeProduct(proId, index) {
    event.preventDefault();

    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {

        $.ajax({

          url: '/removeProduct',
          data: {
            product: proId,
                index: index,

          },

          method: 'post',
          success: (response) => {

            if (response) {
                          location.reload()
            }

          }

        })

      }
    })

  }

</script>

