


            <a href="/admin/addCoupon" class="btn btn-primary m-4 mb-0">Add New Coupon</a>

            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Responsive Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead style="background-color:#191C24 ; text-align: center; color:white;">
                                        <tr>
                                            <th scope="col">Index</th>
                                            <th scope="col">Coupon Name</th>
                                            <th scope="col">Coupon Code</th>
                                            <th scope="col">Discount Amount</th>
                                            <th scope="col">Minimum Amount</th>
                                            <th scope="col">Expiry Date</th>
                                            <th scope="col">Edit Coupon</th>
                                            <th scope="col">Delete Coupon</th>
                                        </tr>
                                    </thead> 

                                    <tbody>
                                     {{#each couponData}}
                                        <tr>
                                            <th scope="row">{{inc @index}}</th>
                                            <td>{{this.couponName}}</td>
                                            <td>{{this.couponCode}}</td>
                                            <td>{{this.discountAmount}}</td>
                                            <td>{{this.minAmount}}</td>
                                            <td>{{formatString this.expiryDate}}</td>
                                            <td><a href="/admin/editCoupon/{{this._id}}"><i class="bi bi-pencil-square"></i></a></td>
                                            <td><a href="/admin/deleteCoupon/{{this._id}}"><i class="bi bi-trash" onclick="return confirm('Are you sure to delete {{this.couponName}}?')"></i></a></td>
                                            
                                        </tr>
                                   {{/each}}
                                 </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
      