            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Category Table</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Category</th>
                                            
                                            <th scope="col">Edit-Category</th>
                                            <th scope="col">Delete-Category</th>
                                            {{!-- <th scope="col">Block/Unblock User</th>
                                            <th scope="col">Status</th> --}}
                                        </tr>
                                    </thead> 

                                    <tbody>
                                     {{#each categoryData}}
                                        <tr>
                                            <th scope="row">{{inc @index}}</th>
                                            <td>{{this.category}}</td>
                                            {{!-- <td>{{this.subCategory}}</td> --}}
                                            <td><a href="/admin/editCategory/{{this._id}}"><i class="bi bi-pencil-square"></i></a></td>
                                            <td><a href="/admin/deleteCategory/{{this._id}}"><i class="bi bi-trash" onclick="return confirm ('Are you sure you want to delete {{this.category}}?')"></i></a></td>
                                            {{!-- <td><a href="/admin/edit/{{this._id}}"><i class="bi bi-pencil-square"></i></a></td>
                                            {{#if this.block}}
                                          
                                            <td><button class="btn btn-primary">blocked</button></td>
                                            {{else}}
                                              <td><button class="btn btn-success">active</button></td>
                                            {{/if}} --}}
                                        </tr>
                                   {{/each}}
                                 </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            

