<div class="container">
    <table class="table" id="product-table" style="margin-top: 100px;">
        <thead style="background-color: #1d1c58; color: white;">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                {{!-- <th scope="col">Total</th> --}}
                <th scope="col">Status</th>
                {{!-- <th scope="col"></th> --}}
                <th scope="col">Cancel</th>
            </tr>
        </thead>
        <tbody>
            {{#each orderData}}
            <tr>
                <td scope="row">{{inc @index}}</td>
                <td>
                    {{#products}}
                    <ul>
                        <li><img src="/productImageuploads/{{productId.imagepath.[0]}}" style="width:41px;height:41px;">
                        </li>

                    </ul> {{/products}}
                </td>
                </td>
                <td scope="row">{{#products}}
                    <ul>
                        <li> {{productId.name}}</li>

                    </ul> {{/products}}
                </td>

                <td scope="row">
                    <ul>
                        <li>{{this.grandTotal}}</li>

                    </ul> 
                </td>
                <td scope="row">
                    {{#products}}
                    <ul>
                        <li>{{quantity}}</li>

                    </ul> {{/products}}
                </td>
                {{!-- <td scope="row">gfgf</td> --}}
                <td id="orderStatus" scope="row">{{this.status}}</td>
                
                {{#if this.cancelled}}
                <td id="orderStatus" scope="row">Already cancelled</td>
                {{else}} {{#if this.delivered}}
                <td id="orderStatus" scope="row">Already delivered</td>
                {{else}}
                <td scope="row">
                    <button class="btn btn-outline-danger btn-sm"
                            onclick="cancelOrder('{{this._id}}');">Cancel</button>
                </td>
                
                {{/if}}{{/if}}
                
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>




