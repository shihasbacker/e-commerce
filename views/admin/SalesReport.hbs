<div class="sales-Report " style="padding:70px ;">


        <div class="title">
    <a href="/admin/">
<button class="btn-btn-primary ml-50px">Go to home</button>
    </a>        

            <h2 class="section--title">Orders</h2>

        </div>
        <div class="table">
            <table id="salesReport-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Products</th>
                        <th>Qty</th>
                        <th>Payment method</th>
                        <th>TotalPrice</th>
                        {{!-- <th> Total revenue</th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{formatString this.createdAt}}</td>
                        <td>{{this.billingAddress.[0].firstName}}</td>
                        <td>{{#each this.products}}{{this.productId.name}}<br>
                            {{/each}}</td>
                        <td>{{#each this.products}}{{this.quantity}}<br>{{/each}}</td>
                     
                        <td>{{this.paymentMethod}}</td>
                           <td>{{this.grandTotal}}</td>


                    </tr>
                    {{/each}}

                </tbody>
                
            </table>
        </div>
    </div>
    </div>
   
 
